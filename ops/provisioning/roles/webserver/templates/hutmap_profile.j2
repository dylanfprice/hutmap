# aliases
alias ls="ls --color=auto --ignore='*.pyc'"


# environment variables
export LANG='en_US.UTF-8'
export LC_ALL='en_US.UTF-8'

{% for key,value in hutmap.iteritems() %}
export HUTMAP_{{ key|upper }}='{{ value }}'
{% endfor %}


# bash functions
workon_hutmap () {
    . {{ virtualenv }}/bin/activate
    cd {{ app_dir }}
}

